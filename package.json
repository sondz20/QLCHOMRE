{
  "name": "chrome-manager",
  "version": "1.0.5",
  "description": "Desktop application for managing Chrome profiles, proxies, and extensions",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-only": "electron-builder --publish=never",
    "dist": "node auto-dist.js",
    "simple-dist": "node simple-dist.js",
    "dist-old": "electron-builder --publish=never",
    "quick-dist": "node quick-dist.js",
    "test-dist": "node auto-dist-simple.js",
    "version:patch": "echo 1 | node auto-dist.js",
    "version:minor": "echo 2 | node auto-dist.js",
    "version:major": "echo 3 | node auto-dist.js",
    "git:tag": "git tag -l | sort",
    "git:status": "git status --porcelain",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "chrome",
    "proxy",
    "extensions",
    "desktop",
    "electron"
  ],
  "author": "Chrome Manager Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "chrome-launcher": "^1.1.0",
    "chrome-remote-interface": "^0.33.3",
    "dotenv": "^16.3.1",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.16.1",
    "socks-proxy-agent": "^8.0.5",
    "ssh2-sftp-client": "^12.0.1"
  },
  "build": {
    "appId": "com.chromemanager.app",
    "productName": "Chrome Manager - Quản lý Chrome Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "data/extensions.json",
      "data/profiles.json",
      "data/proxies.json",
      "assets/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Chrome Manager Team",
      "certificateFile": null,
      "certificateSha1": null,
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Chrome Manager",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en"
      ],
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "Chrome-Manager-Setup.exe"
    },
    "publish": null
  }
}