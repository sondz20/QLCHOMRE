{
  "name": "chrome-manager",
  "version": "1.0.0",
  "description": "Desktop application for managing Chrome profiles, proxies, and extensions",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "chrome",
    "proxy",
    "extensions",
    "desktop",
    "electron"
  ],
  "author": "Chrome Manager Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "chrome-launcher": "^1.1.0",
    "chrome-remote-interface": "^0.33.3",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.16.1",
    "socks-proxy-agent": "^8.0.5"
  },
  "build": {
    "appId": "com.chromemanager.app",
    "productName": "Chrome Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
